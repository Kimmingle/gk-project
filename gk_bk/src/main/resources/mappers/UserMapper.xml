<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.gk.website.user.dao.UserMapper">

    <select id="findByUserId" parameterType="String"  resultType="org.gk.website.user.dto.response.UserLoginDTO">
        SELECT
        user_id,
        password,
        login_attempts
        FROM users
        WHERE user_id = #{userId}
    </select>

</mapper>
